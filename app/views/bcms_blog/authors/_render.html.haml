%div.container-fluid.team-page{:itemscope=>true, :itemtype=>"http://schema.org/Person"}
	%div.row
		%div.col-md-2.thumbnail
			%img{:src => attachment_path_for(content_block.picture), :itemprop => "image", :content => attachment_path_for(content_block.picture)}
		%div.col-md-10
			%h4.team-page
				%meta{:itemprop => "name", :content => content_block.name}
				= content_block.name
			%summary.team-page{:itemprop => "description"}= content_block.bio